{
  "presets": [
    "@babel/flow",
    [
      "@babel/env",
      {
        "targets": {
          "browsers": [
            "last 3 versions"
          ],
          "node": "10"
        }
      }
    ]
  ],
  "env": {
    "production": {
      "comments": false,
      "compact": "auto",
      "minified": true,
      "ignore": [
        "**/__tests__/",
        "**/__mocks__/",
        "**/*.test.js"
      ]
    }
  }
}